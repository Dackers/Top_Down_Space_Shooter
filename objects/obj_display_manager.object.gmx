        <arguments>
          <argument>
            <kind>1</kind>
            <string>///Display Properties

display_reset(0, false);

ideal_width = 0;
ideal_height = 540;
zoom = 1;
max_zoom = 1;
display_width = display_get_width();
display_height = display_get_height();

aspect_ratio = display_width/display_height;
aspect_ratio = clamp(aspect_ratio, 16/10, 21/9);    // Clamp to ratio between 1.6 and 2.33
ideal_width = round(ideal_height*aspect_ratio);     // When using static HEIGHT and adjusting width (preferred option)
//ideal_height=round(ideal_width / aspect_ratio);   // When using static WIDTH and adjusting width (not preferred option)

//Perfect Pixel Scaling
if(display_width mod ideal_width != 0) {
    var d = round(display_width/ideal_width);       // Divide display_width by ideal_width and round to nearest whole number multiplier
    ideal_width = display_width/d;                  // then set ideal_width to that multiple
}
if(display_height mod ideal_height != 0) {          // Same with height
    var d = round(display_height/ideal_height);
    ideal_height = display_height/d;
}

//Check for odd numbers using bitwise operator
if(ideal_width &amp; 1)     // If idea_width is odd returns 1, even returns 0
    ideal_width++;      // if odd, add 1 to ideal_width
if(ideal_height &amp; 1)    // Same for height
    ideal_height++;
    
//Calculate Max Zoom
max_zoom = floor(display_width/ideal_width);

// Setup view for every room
for(var i=1; i&lt;=room_last; i++) {   // Skip room[0] because this code is running in it (room[0] = _display_init)
    if(room_exists(i)) {
        room_set_view(i,0,true,0,0,ideal_width,ideal_height,0,0,ideal_width,ideal_height,0,0,0,0,-1);   // This function is in the online help, but middle-click doesn't work
        room_set_view_enabled(i,true);
    }
}

window_set_size(ideal_width,ideal_height);
display_set_gui_size(ideal_width,ideal_height); // Set higher if we lower ideal_width/height
surface_resize(application_surface,ideal_width*zoom,ideal_height*zoom);

alarm[0] = 1; // This will center the window after the initial resizing.
room_goto(room_next(room));
</string>
